  <link rel='stylesheet' href='/Content/app.css' />
</head>
<body>
  

  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header" style="height: 85px;">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><img src="/Assets/images/cslogo.png" width="150px"></a>
    </div>
  
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse" style="height: 100px;">
      <ul class="nav navbar-nav navbar-right" style="height: 100px;">
        <!-- Home link -->
        <% if (title === "Home") { %>
          <li class="active"><a href="/"><i class="fa fa-home fa-lg"></i>Home</a></li>
        <% } else { %>
          <li><a href="/"><i class="fa fa-home fa-lg"></i>Home</a></li>
        <% } %>
  
        <!-- Register and Login links -->
        <% if (isLoggedIn) { %>
          <!-- Show Logout link when user is authenticated -->
          <li><a href="/logout"><i class="fa fa-sign-out fa-lg"></i>Logout</a></li>
        <% } else { %>
          <!-- Show Login link when user is not authenticated -->
          <li><a href="/login"><i class="fa fa-sign-in fa-lg"></i>Login</a></li>
        <% } %>
  
      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>
  <div class="login">
    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
          <form method="POST" action="/login">
            <span class="welcomeSign">
              Welcome
            </span>
            <span class="login100-form-title p-b-48">
              <i class="zmdi zmdi-font"></i>
            </span>
    
            <div class="wrap-input100 validate-input" >
              <input class="input100" type="text" name="username" id="username">
              <span class="focus-input100" data-placeholder="Username"></span>
            </div>
    
            <div class="wrap-input100 validate-input" data-validate="Enter password">
              <span class="btn-show-pass">
                <i class="zmdi zmdi-eye"></i>
              </span>
              <input class="input100" type="password" name="password" id="password">
              <span class="focus-input100" data-placeholder="Password"></span>
            </div>
    
            <div class="container-login100-form-btn">
              <div class="wrap-login100-form-btn">
                <div class="login100-form-bgbtn"></div>
                <button class="btn-3" style="font-family: 'Lato'; font-size: 18px; font-weight: 200;">
                  Login
                </button>
              </div>
            </div>
            
    
            <div class="account">
              <span class="txt1">
                Donâ€™t have an account?
              </span>
    
              <a class="txt2" href="/register">
                Sign Up
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


<nav class="navbar navbar-inverse navbar-fixed-bottom">
  <div class="container">
    <h4 class="navbar-text text-center">&copy; CyberSphere - Incident Management System 2023</h4>
  </div>
</nav>

