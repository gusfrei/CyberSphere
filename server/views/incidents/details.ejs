<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1>Incident Management</h1>
      <form class="form" method="post">
        <div class="form-group">
          <label for="incidentIDField">Incident ID</label>
          <input type="text" class="form-control" id="incidentIDField" name="incidentID" placeholder="Type in Incident ID" required>
        </div>
        <div class="form-group">
          <label for="incidentClassField">Incident Class</label>
          <input type="text" class="form-control" id="incidentClassField" name="incidentClass" placeholder="Type in Incident Class" required>
        </div>
        <div class="form-group">
          <label for="incidentDateField">Incident Date</label>
          <input type="date" class="form-control" id="incidentDateField" name="incidentDate">
        </div>
        <div class="form-group">
          <label for="incidentDescriptionField">Incident Description</label>
          <input type="text" class="form-control" id="incidentDescriptionField" name="incidentDescription" placeholder="Describe the incident" required>
        </div>

        <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Save Incident</button>
        <a href="/incidents" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
      </form>
    </div>
  </div>
</div>

